---

<Layout 
    title="Equipo de WoodBox"
    description=""
>
    <Header />
    <main>
        <div style="max-width: 1000px; margin: 0 auto;" class="uk-child-width-expand@s uk-background-default uk-box-shadow-small uk-border-rounded uk-card uk-padding">
            <h1>Equipo de WoodBox</h1>
            <hr>
            <div style="margin: 0 auto; display: flex; flex-wrap: wrap;" id="team_members">
            </div>
        </div>
    </main>
    <Footer />
    <script is:inline define:vars={{ team }}>
        team.forEach((person) => {
            const article = document.createRange().createContextualFragment(/*html*/ `
                <div style="width: 100%; height: 65px; padding: 2px 10px; border-radius: 10px; max-width: 200px; margin: 10px; border: 1px solid #1e87f050; color: #111; background: #f5f5f5; display: flex; flex-direction: column; justify-content: center;">
                    <h3 style="margin: 0; color: #1e87f0; font-size: large; font-weight: bold;">${person.name}</h3>
                    <small style="color: #555;">${person.profession}</small>
                </div>
            `);
            const team_members = document.getElementById("team_members").append(article);
        });
    </script>
</Layout>