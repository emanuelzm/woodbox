---
import Header from '../components/header/Header.astro';
import Footer from '../components/footer/Footer.astro';
import Layout from '../layouts/Layout.astro';

const phrase = "Guarda tus tesoros con estilo y funcionalidad, mientras añades un toque de encanto.";
const base_url = "https://www.woodboxes.co";
---

<Layout title="Woodbox">
	<Header />
	<main>
		<div class="uk-flex-column uk-margin uk-border-rounded uk-height-medium uk-flex uk-flex-center uk-flex-middle uk-background-cover uk-light" data-src="https://images.unsplash.com/photo-1490822180406-880c226c150b?fit=crop&w=650&h=433&q=80" uk-img>
			<h1>WoodBox: Custom Works</h1>
			<p>{phrase}</p>
		</div>
		<div class="uk-margin">
			<div class="uk-card uk-card-default uk-grid-collapse uk-child-width-1-2@s uk-margin" uk-grid>
				<div class="uk-card-media-left uk-cover-container">
					<img src="images/light.jpg" alt="">
				</div>
				<div>
					<div class="uk-card-body">
						<h3 class="uk-card-title">Media Left</h3>
						<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt.</p>
					</div>
				</div>
			</div>
		</div>
		<div class="uk-margin">
			<div class="uk-slider-container-offset" uk-slider>

				<div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1">
			
					<ul class="uk-slider-items uk-child-width-1-2@s uk-grid">
						<li>
							<div class="uk-card uk-card-default">
								<div class="uk-card-media-top">
									<img src="images/photo.jpg" width="1800" height="1200" alt="">
								</div>
								<div class="uk-card-body">
									<h3 class="uk-card-title">Headline 1</h3>
									<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt.</p>
								</div>
							</div>
						</li>
						<li>
							<div class="uk-card uk-card-default">
								<div class="uk-card-media-top">
									<img src="images/dark.jpg" width="1800" height="1200" alt="">
								</div>
								<div class="uk-card-body">
									<h3 class="uk-card-title">Headline 2</h3>
									<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt.</p>
								</div>
							</div>
						</li>
						<li>
							<div class="uk-card uk-border-rounded uk-background-primary uk-card-default" style="height: 100%;">
								<a href=`${base_url}/products`>
									<div class="uk-flex uk-flex-middle uk-card-body uk-flex-column" style="height: 100%; justify-content: center;">
										<h3 class="uk-card-title">Mirar más</h3>
										<button class="uk-button uk-border-circle">></button>
									</div>
								</a>
							</div>
						</li>
					</ul>
			
					<a style="" class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
					<a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slider-item="next"></a>
			
				</div>
			
				<ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin"></ul>
			
			</div>
		</div>
		<div class="uk-margin">
			<div class="uk-card uk-card-default uk-grid-collapse uk-child-width-1-2@s uk-margin" uk-grid>
				<div class="uk-card-media-left uk-cover-container">
					<img src="images/light.jpg" alt="">
				</div>
				<div>
					<div class="uk-card-body">
						<h3 class="uk-card-title">Media Left</h3>
						<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt.</p>
					</div>
				</div>
			</div>
		</div>
		<div style="border: 1px solid #111" class="uk-card uk-card-default uk-grid-collapse uk-child-width-1-2@s uk-margin" uk-grid>
			<div class="uk-flex-last@s uk-card-media-right uk-cover-container">
				<img src="./assets/newsletter.jpg" alt="Newsletter WoodBox">
			</div>
			<div>
				<div class="uk-card-body">
					<h3 class="uk-card-title">Nuestro Newsletter:</h3>
					<form method="POST" action="#">
						<label for="form_email">Danos tu correo: </label><input id="form_email" style="border: 1px solid #111;" class="uk-input uk-form-blank uk-form-width-medium" type="email" placeholder="john.doe@gmail.com" required>
						<div class="uk-margin uk-grid-small uk-child-width-auto uk-grid">
							<label><input class="uk-checkbox" type="checkbox"> Acepto terminos y condiciones</label>
						</div>
						<button class="uk-button uk-button-default">Suscribirme</button>
					</form>
				</div>
			</div>
		</div>		
	</main>
	<Footer />
</Layout>