---
import brand from '../api/brand.json';
const base_url = brand[0].base_url;

import allProducts from "../api/products.json";
const products = allProducts;
---

<section>
  <div class="max-w-screen-xl px-4 py-8 mx-auto sm:py-12 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-4 lg:grid-cols-3 lg:items-stretch">
      <div class="grid p-6 bg-gray-200 rounded place-content-center sm:p-8">
        <div class="max-w-md mx-auto text-center lg:text-left">
          <header>
            <h2 class="text-xl font-bold text-gray-900 sm:text-3xl">Boxes</h2>

            <p class="mt-4 text-gray-500">
              Elige entre los diferentes tipos de cajas que tenemos para ti.
            </p>
          </header>

          <a
            href=`${base_url}/products`
            class="inline-block px-12 py-3 mt-8 text-sm font-medium text-white transition bg-gray-900 border border-gray-900 rounded hover:shadow focus:outline-none focus:ring"
          >
            Mirar m√°s
          </a>
        </div>
      </div>

      <div class="lg:col-span-2 lg:py-8">
        <ul class="grid grid-cols-2 gap-4">
          <li>
            <a href=`${base_url}/products/${products[1].link}` class="block group">
              <img
                src={products[1].images[0]}
                alt={products[1].name}
                class="object-cover w-full rounded aspect-square"
              />

              <div class="mt-3">
                <h3
                  class="font-medium text-gray-900 group-hover:underline group-hover:underline-offset-4"
                >
                    {products[1].name}
                </h3>

                <!-- <p class="mt-1 text-sm text-gray-700">$150</p> -->
              </div>
            </a>
          </li>

          <li>
            <a href=`${base_url}/products/${products[2].link}` class="block group">
              <img
                src={products[2].images[0]}
                alt={products[2].name}
                class="object-cover w-full rounded aspect-square"
              />

              <div class="mt-3">
                <h3
                  class="font-medium text-gray-900 group-hover:underline group-hover:underline-offset-4"
                >
                    {products[2].name}
                </h3>

                <!-- <p class="mt-1 text-sm text-gray-700">$150</p> -->
              </div>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>